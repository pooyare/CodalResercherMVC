@model List<MatchedTable>
@{
    ViewData["Title"] = "نتایج جستجو در فایل‌های اکسل";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- فونت وزیر برای پشتیبانی بهتر از فارسی -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/vazir-font/30.1.0/font-face.css" rel="stylesheet">
    <!-- بوت‌استرپ نسخه RTL -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Vazir', tahoma, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        .search-results {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 25px;
            margin-bottom: 30px;
        }

        .table-container {
            overflow-x: auto;
            border-radius: 6px;
            border: 1px solid #e3e6f0;
            margin-bottom: 30px;
            background-color: #fff;
        }

        .result-header {
            background-color: #f1f5f9;
            padding: 10px 15px;
            border-radius: 6px;
            margin-bottom: 15px;
            border-right: 4px solid #4e73df;
        }

        .keyword-badge {
            background-color: #4e73df;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 500;
        }

        .selection-table {
            border-collapse: separate;
            border-spacing: 0;
        }

            .selection-table th {
                background-color: #4e73df;
                color: white;
                padding: 12px;
            }

            .selection-table td {
                padding: 12px;
                vertical-align: middle;
            }

            .selection-table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        .check-column {
            width: 60px;
            text-align: center;
        }

        .custom-checkbox {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .submit-btn {
            background-color: #1cc88a;
            border: none;
            padding: 10px 20px;
            color: white;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .submit-btn:hover {
                background-color: #169e6c;
                transform: translateY(-2px);
                box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            }

        .empty-results {
            text-align: center;
            padding: 50px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="search-results">
            <h2 class="text-center mb-4">نتایج جستجو در فایل‌های اکسل</h2>

            @if (Model == null || !Model.Any())
            {
                <div class="empty-results">
                    <i class="fas fa-search mb-3" style="font-size: 48px;"></i>
                    <p class="fs-5">هیچ جدولی با کلمات کلیدی مورد نظر یافت نشد.</p>
                </div>
            }
            else
            {
                <p class="mb-4">تعداد <strong>@Model.Count</strong> جدول یافت شد. لطفاً موارد مورد نظر را انتخاب کنید.</p>

                <!-- نمایش جدول‌ها -->
                @foreach (var item in Model)
                {
                    <div class="mb-5">
                        <div class="result-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-file-excel me-2"></i>
                                فایل: <span class="text-dark">@item.FileName</span>
                            </h5>
                            <div>
                                کلمه کلیدی: <span class="keyword-badge">@item.Keyword</span>
                            </div>
                            <div>
                                نام شرکت: <span class="company-badge">@item.CompanySymbol</span>
                            </div>
                        </div>
                        <div class="table-container">
                            @Html.Raw(item.HtmlTable)
                        </div>
                    </div>
                }

                <!-- فرم انتخاب -->
                <form asp-action="ProcessMatchedTables" method="post">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">انتخاب جدول‌ها برای پردازش</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table selection-table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="check-column">
                                                <input type="checkbox" id="selectAll" class="custom-checkbox">
                                            </th>
                                            <th>کلیدواژه</th>
                                            <th>نام فایل</th>
                                            <th>نام شرکت</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr>
                                                <td class="check-column">
                                                    <input type="checkbox" name="selectedTableIds" value="@Model[i].Id" class="table-checkbox custom-checkbox">
                                                </td>
                                                <td>@Model[i].Keyword</td>
                                                <td>@Model[i].FileName</td>
                                                <td>@Model[i].CompanySymbol</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-4">
                                <button type="submit" class="submit-btn">
                                    <i class="fas fa-check me-2"></i>
                                    نمایش داده‌های تمیز شده
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>

    <!-- اسکریپت‌ها -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js"></script>
    <script>
        // انتخاب یا لغو انتخاب همه
        $(document).ready(function() {
            $("#selectAll").click(function() {
                $(".table-checkbox").prop("checked", $(this).prop("checked"));
            });

            // بررسی وضعیت انتخاب همه
            $(".table-checkbox").click(function() {
                if ($(".table-checkbox:checked").length == $(".table-checkbox").length) {
                    $("#selectAll").prop("checked", true);
                } else {
                    $("#selectAll").prop("checked", false);
                }
            });
        });
    </script>
</body>
</html>